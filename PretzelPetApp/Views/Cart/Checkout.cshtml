@model ShippingDetails

<style>
    .field-validation-error{color: #f00;}
    .field-validation-valid{display:none;}
    .input-validation-error{border: 1px solid #f00;}
    .validation-summary-errors{font-weight:bold; color:#f00;}
    .validation-summary-valid{display:none;}
</style>


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Sipariş Bilgileriniz</h2>
            <p>Lütfen sipariş bilgilerinizi giriniz.</p>
            <hr />
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()
                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Ad Soyad</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(x => x.FullName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Adres Başlığı</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(x => x.AdressHeader, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Adres</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(x => x.Adress, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Şehir</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">İlçe</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(x => x.District, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Posta Kodu</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(x => x.PostCode, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-6">
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>
                </div>
                
            }
        </div>
    </div>
</div>

