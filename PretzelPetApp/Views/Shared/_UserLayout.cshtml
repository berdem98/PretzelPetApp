@using System.Security.Claims
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PretzelPetApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PretzelPetApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="/FrontendProje/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <div class="main">
        <!-- Navbar -->
        <header>
            <div class="logo">
                Pretzel Pet
                <img style="width: 50px; border-radius: 50%;" src="~/FrontendProje/img/v987-11a.jpg" alt="">
            </div>
            <input type="checkbox" id="nav_check" hidden>
            <nav>
                <ul>
                    <li>
                        <a asp-controller="Home" asp-action="Index" class="active"><i class="fa-solid fa-house"></i>Ana Sayfa</a>
                    </li>
                    <li>
                        <a asp-controller="Category" asp-action="Index" asp-route-id="1"><i class="fa-solid fa-scissors"></i>Bakım</a>
                    </li>
                    <li>
                        <a asp-controller="Category" asp-action="Index" asp-route-id="2"><i class="fa-solid fa-dog"></i>Köpek</a>
                    </li>
                    <li>
                        <a asp-controller="Category" asp-action="Index" asp-route-id="3"><i class="fa-solid fa-cat"></i>Kedi</a>
                    </li>

                    <li>
                        <a asp-controller="Category" asp-action="Index" asp-route-id="4"><i class="fa-solid fa-crow"></i>Kuş</a>
                    </li>
                    
                    <li>
                        <a asp-controller="Category" asp-action="Index" asp-route-id="5"><i class="fa-solid fa-fish"></i>Balık</a>
                    </li>
                    <li>
                        <a asp-controller="Category" asp-action="Index" asp-route-id="6"><i class="fa-solid fa-shirt"></i>Kıyafet</a>
                    </li>
                </ul>
            </nav>
            <div class="login">
                <ul>
                    
                    @if (User.FindFirstValue(ClaimTypes.Role) == "admin")
                    {
                        <li>
                            <a asp-controller ="Cart" asp-action="Index"><i class="fa-solid fa-cart-shopping"></i>Sepetim</a>
                        </li>
                        <li>
                            <a asp-controller="Admin" asp-action="Index"><i class="fa-solid fa-user"></i>@User.Identity!.Name</a>
                        </li>
                        <li>
                            <a asp-controller="Login" asp-action="Logout"><i class="fa-solid fa-right-from-bracket"></i>Çıkış</a>
                        </li>
                    }
                    else{
                    @if (User.Identity!.IsAuthenticated)
                    {
                        
                        <li>

                                <a asp-controller="Cart" asp-action="Index"><i class="fa-solid fa-cart-shopping"></i>Sepetim</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="Index"><i class="fa-solid fa-user"></i>@User.Identity.Name</a>
                        </li>
                        <li>
                            <a asp-controller="Login" asp-action="Logout"><i class="fa-solid fa-right-from-bracket"></i>Çıkış</a>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a asp-controller="Login" asp-action="Index">Giriş Yap</a>
                        </li>
                        <li>
                            <a asp-controller="Register" asp-action="Index">Kayıt Ol</a>
                        </li>
                    }
                    }

                        



                        
                    
                </ul>
            </div>
            <label for="nav_check" class="hamburger">
                <div></div>
                <div></div>
                <div></div>
            </label>
        </header>
        <hr>

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>


        <!-- Footer -->
        <div class="container">
            <footer class="row row-cols-1 row-cols-sm-2 row-cols-md-5 py-5 my-5 border-top">
                <div class="col mb-3">
                    <a href="/" class="d-flex align-items-center mb-3 link-dark text-decoration-none">
                        <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"></use></svg>
                    </a>
                    <p class="text-muted">©2024 Pretzel Pet Ticaret .A.Ş<br>-Her Hakkı Saklıdır.</p>
                </div>

                <div class="col mb-3">
                </div>

                <div class="col mb-3">
                    <h5>Pretzel Pet</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Ana Sayfa</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Pet Kuaför</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Pet Shop</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Kıyafetler</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Fırsatlar</a></li>
                    </ul>
                </div>

                <div class="col mb-3">
                    <h5>Hakkımızda</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Biz Kimiz</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">İletişim</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Sosyal Medya</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Müşteri Hizmetleri</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Pretzel Pet Kurumsal</a></li>
                    </ul>
                </div>

                <div class="col mb-3">
                    <h5>Yardım</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">SSS</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Yardım</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Nasıl İade Edebilirim</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Ödeme ve Teslimat</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">İade İptal Koşulları</a></li>
                    </ul>
                </div>
            </footer>
        </div>
        <!-- Footer -->
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
